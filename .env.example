# autodocs-ai configuration
# Copy this file to .env and fill in the values

# AI Provider: openai | anthropic | gemini | azure | ollama
AUTODOCS_PROVIDER=openai

# OpenAI
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o

# Anthropic
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-sonnet-4-20250514

# Google Gemini
GOOGLE_API_KEY=
GEMINI_MODEL=gemini-2.0-flash

# Azure OpenAI
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_DEPLOYMENT=
AZURE_OPENAI_API_VERSION=2024-06-01

# Ollama (local)
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3.1

# Rendering engine: typst | latex
AUTODOCS_RENDERER=typst

# Output directory
AUTODOCS_OUTPUT_DIR=./output

# API server
AUTODOCS_API_HOST=0.0.0.0
AUTODOCS_API_PORT=8000
AUTODOCS_API_KEY=

# Document generation
AUTODOCS_LANGUAGE=english
AUTODOCS_MAX_TOKENS=4096
